      },
      "post": {
        "summary": "Tạo khách hàng mới",
        "tags": ["Customer"],
        "description": "Yêu cầu accessToken hợp lệ trong header Authorization (Bearer Token).",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "John Carter" },
